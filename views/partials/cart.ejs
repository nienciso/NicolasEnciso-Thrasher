<h1>Carrito de compras</h1>

<% if (cartCount === 0) { %> 
  <p>No hay productos en el carrito</p>
<% } else { %>
  <table>
    <thead>
      <tr>
        <th>Producto</th>
        <th>Cantidad</th>
        <th>Precio unitario</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% Object.keys(cart).forEach((key) => {
        const producto = productos.find((prod) => prod._id == key);
        const cantidad = cart[key];
        const precio = producto.precio;
        const total = precio * cantidad;
      %>
        <tr>
          <td><%= producto.nombre %></td>
          <td><%= cantidad %></td>
          <td>$<%= precio %></td>
          <td>$<%= total %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>