<div class="card">
    <% if (producto.imagen) { %>
      <img src="<%= producto.imagen %>" class="card-img-top" alt="Imagen de <%= producto.nombre %>">
    <% } %>
    <div class="card-body">
      <h5 class="card-title"><%= producto.nombre %></h5>
      <p class="card-text"><%= producto.descripcion %></p>
      <p><strong>Precio:</strong> <%= producto.precio %> $</p>
    </div>
  </div>